{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "outDir": "./dist/",
    "rootDir": "./src",
    "noImplicitAny": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ],
}